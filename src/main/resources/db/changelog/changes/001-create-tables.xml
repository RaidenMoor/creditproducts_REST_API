<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1" author="maria">
        <createTable tableName="roles">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="roles_seq" startValue="12" incrementBy="1"/>
    </changeSet>

    <changeSet id="2" author="maria">
        <createTable tableName="users">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="users"
                                 baseColumnNames="role_id"
                                 constraintName="fk_users_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>

        <createSequence sequenceName="users_seq" startValue="1" incrementBy="1"/>
    </changeSet>


    <changeSet id="3" author="maria">
        <createTable tableName="clients">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="passport_number" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="registration_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INTEGER">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="clients"
                                 baseColumnNames="user_id"
                                 constraintName="fk_clients_users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>

        <createSequence sequenceName="clients_seq" startValue="1" incrementBy="1"/>
    </changeSet>


    <changeSet id="4" author="maria">
        <createTable tableName="credit_products">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="min_amount" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_amount" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="term_min" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="term_max" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>

        <createSequence sequenceName="products_seq" startValue="12" incrementBy="1"/>
    </changeSet>

    <changeSet id="5" author="maria">
        <createTable tableName="credit_applications">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="credit_product_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="term_months" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="application_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="decision_date" type="TIMESTAMP WITHOUT TIME ZONE"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="credit_applications"
                                 baseColumnNames="client_id"
                                 constraintName="fk_credit_applications_clients"
                                 referencedTableName="clients"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseTableName="credit_applications"
                                 baseColumnNames="credit_product_id"
                                 constraintName="fk_credit_applications_credit_products"
                                 referencedTableName="credit_products"
                                 referencedColumnNames="id"
                                 onDelete="RESTRICT"/>

        <createSequence sequenceName="applications_seq" startValue="1" incrementBy="1"/>
    </changeSet>


    <changeSet id="6" author="maria">
        <createTable tableName="issued_loans">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="application_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="remaining_amount" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="issued_loans"
                                 baseColumnNames="application_id"
                                 constraintName="fk_issued_loans_credit_applications"
                                 referencedTableName="credit_applications"
                                 referencedColumnNames="id"
                                 onDelete="RESTRICT"/>

        <createSequence sequenceName="loans_seq" startValue="1" incrementBy="1"/>
    </changeSet>


</databaseChangeLog>